<script type="text/javascript">
	function showPrintReceiptPopup(){
		var width = 600;
		var height = 250;
		var left = (screen.width - width) / 2;
		var top = (screen.width - width) / 2;
		
		window.open('frontend/print_receipt.jsp','_blank',
				'width=' + width + ', height=' + height + 
				', top=' + top +
				);
	}
</script>
